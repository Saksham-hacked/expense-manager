{
  "manifest_version": 3,
  "name": "Floating AI Expense Assistant",
  "version": "0.1.0",
  "description": "AI-powered expense tracker with floating UI",
  "permissions": [
    "storage",
    "identity"
  ],
   "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentScript.js"],
      "css": ["public/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "411523715379-vl29oesla4am823194ss37sg11pfl051.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  }
}
