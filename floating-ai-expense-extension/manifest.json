{
  "manifest_version": 3,
  "name": "Floating AI Expense Assistant",
  "version": "0.1.1",
  "description": "AI-powered expense tracker with floating UI - Brave Browser Compatible",
  "permissions": [
    "storage",
    "identity"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://accounts.google.com/*",
    "https://oauth2.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentScript.js"],
      "css": ["public/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
